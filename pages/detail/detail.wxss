}
.coverpath image{
    width:100%;
    height:390rpx;
}
.ar_cont{
    padding-left: 60rpx;
    font-size:35rpx;
    background: #fff;
    margin-bottom:30rpx;
    /*height: 45rpx;
    line-height: 45rpx;*/
    color:#666666;
    width: 100%;
    position: relative;
}
.ar_cont .ar_cont_h1{
    font-size: 37rpx;
    font-weight: 600;
    line-height: 64rpx;
    color:#000;
}
.ar_cont_price_common{
    font-size: 28rpx;
    margin-left: 180rpx;
}
.ar_cont .ar_cont_price{
