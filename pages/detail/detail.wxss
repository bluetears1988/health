    bottom: 0;
}
.mt14{
    margin-top: 14rpx;
}
.mt16{
    margin-top: 16rpx;
}
.dfooter{
    position:fixed;
    bottom: 0;
    background-color: #f6f6f7;
    width: 100%;
    height: 110rpx;
    text-align: center;
}
.dfooter .f_btn{
    height: 110rpx;
    display: inline-block;
    color: #333;
    font-size: 25rpx;
    margin-left: 16rpx;
    margin-top: 15rpx;
}
.dfooter .f_btn button{ 
    display: inline-block;
    font-size: 31rpx;
}
.dfooter .f_btn text{
    display: block;
}
.dfooter button.book{
    color: #fff;
    background:#e64340;
}
.dfooter button.shop{
    color: #fff;
    background:orange;
}
.dfooter button.group{
    color: #fff;
    background:limegreen;
}
