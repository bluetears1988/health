.group_item{
    width: 100%;
    background-color: #fff;
    margin-top: 28rpx;
    padding-left: 20rpx;
    padding-top: 15rpx;
    padding-bottom: 15rpx;
}
.price{
    margin-top: 18rpx;
}
.lowest_label{
    font-size: 23rpx;
    margin-right: 20rpx;
}
.lowest_price{
    display: inline-block;
    width: 200rpx;
    color: red;
    border: 1px solid red;
    font-size: 30rpx;
    height: 40rpx;
    line-height: 40rpx;
    text-align: center;
}
.shichang_price{
    font-size: 28rpx;
    color: gray;
    text-decoration:line-through;
}
.open{
    display: inline-block;
    font-size: 30rpx;
    width: 150rpx;
     border: 1px solid red;
     height: 40rpx;
    line-height: 40rpx;
    background-color: red;
    color: white;
    border-top-right-radius: 20rpx;
    border-bottom-right-radius: 20rpx;
    padding-left: 10rpx;

}
.title{
    width: 90%;
    display: -webkit-box !important;
    overflow: hidden;
    text-overflow: ellipsis;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:3;
}